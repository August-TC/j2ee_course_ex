<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns="http://java.sun.com/xml/ns/j2ee" 
	xmlns:javaee="http://java.sun.com/xml/ns/javaee" 
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd" 
	version="2.4">
  <welcome-file-list>
    <welcome-file>select.html</welcome-file>
  </welcome-file-list>
  <context-param>
  	<param-name>Date</param-name>
  	<param-value>2017-9-23</param-value>
  </context-param>
  <servlet>
    <servlet-name>SelectBeer</servlet-name>
    <servlet-class>lesson.j2ee.ex1.SelectBeerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SelectBeer</servlet-name>
    <url-pattern>/SelectBeer.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>FirstServlet</servlet-name>
    <servlet-class>lesson.j2ee.ex1.FirstServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FirstServlet</servlet-name>
    <url-pattern>/Serv1</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CodeReturn</servlet-name>
    <servlet-class>lesson.j2ee.ex1.CodeReturn</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CodeReturn</servlet-name>
    <url-pattern>/CodeReturn</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ShowBrownBeer</servlet-name>
    <servlet-class>ShowBeer.ShowBrownBeer</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ShowBrownBeer</servlet-name>
    <url-pattern>/BrownBeer</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ShowDarkBeer</servlet-name>
    <servlet-class>ShowBeer.ShowDarkBeer</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ShowDarkBeer</servlet-name>
    <url-pattern>/DarkBeer</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ShowLightBeer</servlet-name>
    <servlet-class>ShowBeer.ShowLightBeer</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ShowLightBeer</servlet-name>
    <url-pattern>/LightBeer</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ShowAmberBeer</servlet-name>
    <servlet-class>ShowBeer.ShowAmberBeer</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ShowAmberBeer</servlet-name>
    <url-pattern>/AmberBeer</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>TestInitParam</servlet-name>
    <servlet-class>lesson.j2ee.ex1.TestInitParam</servlet-class>
    <init-param>
    	<param-name>adminEmail</param-name>
    	<param-value>august_tancheng@mail.nwpu.edu.cn</param-value>
    </init-param>
    <init-param>
    	<param-name>adminName</param-name>
    	<param-value>August</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>TestInitParam</servlet-name>
    <url-pattern>/TestInitParam</url-pattern>
  </servlet-mapping>
</web-app>